<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StoreDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:fillViewport="true"
        android:id="@+id/store_detail_scrollview0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <ImageView
                    android:id="@+id/store_detail_imageview0"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/pasta"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/store_detail_imageButon1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_back2"
                    android:background="@android:color/transparent"/>

            </FrameLayout>

            <TextView
                android:id="@+id/store_detail_textview0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center_horizontal"
                android:text="미오지오"
                android:textSize="36sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/store_detail_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="현재 혼잡도는"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/store_detail_textview2"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="혼잡"
                    android:textColor="#ff0000"
                    android:textSize="32sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/store_detail_textview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:text="편의시설"
                android:textSize="25sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_recycler_view_convenience"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:overScrollMode="never"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/store_detail_textview4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:text="테이블/좌석 수"
                android:textSize="25sp" />

            <!-- A RecyclerView with some commonly used attributes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:scrollbars="horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/store_detail_textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="110dp"
                    android:gravity="left"
                    android:text="Review"
                    android:textSize="25sp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_toRightOf="@id/store_detail_textview5"
                    android:id="@+id/store_detail_moreBtn"
                    android:text="더보기"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_toRightOf="@id/store_detail_moreBtn"
                    android:id="@+id/store_detail_writeBtn"
                    android:text="글쓰기"
                    android:textSize="20sp" />

        </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_recycler_view1"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>